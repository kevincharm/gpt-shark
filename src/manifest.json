{
  "manifest_version": 2,
  "name": "gpt-shark",
  "version": "0.3.0",
  "icons": {
      "64": "favicon.ico"
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["browser-polyfill.js", "background/index.ts"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content-scripts/index.css"],
      "js": ["browser-polyfill.js", "content-scripts/index.tsx"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_title": "gpt-shark",
    "default_popup": "popup/index.html"
  },
  "web_accessible_resources": [
    "browser-polyfill.js",
    "inject/index.ts"
  ]
}
